<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginRight="@dimen/list_item_margin"
        android:scaleType="centerInside"
        android:maxHeight="@dimen/fab_icon_size"
        android:maxWidth="@dimen/fab_icon_size"
        android:cropToPadding="true"
        app:srcCompat="@mipmap/list_item_icon"
        android:id="@+id/friend_icon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friend_name"
            android:textSize="@dimen/list_item_name_size"
            android:textColorHighlight="@color/black_deep"
            />

        <TextView
            android:text="wisdom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friend_wisdom"
            android:textColor="@color/gray_pressed"/>

    </LinearLayout>

</LinearLayout>